{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@styles/*": ["./src/shared/styles/*"],
      "@icons/*": ["./src/shared/components/icons/*"],
      "@atoms": ["./src/app/components/atoms/index"],
      "@molecules": ["./src/app/components/molecules/index"],
      "@organisms": ["./src/app/components/organisms/index"],
      "@templates": ["./src/app/components/templates/index"],
      "@interfaces/*": ["./src/shared/interfaces/*"],
      "@constants/*": ["./src/shared/constants/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/about/page.jsx"
  ],
  "exclude": ["node_modules"]
}
